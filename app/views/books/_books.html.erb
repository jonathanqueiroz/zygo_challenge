<div class="row">
  <% if @books.present? %>
    <table class="table table-bordered table-hover table-responsive">
      <thead class="text-center">
        <tr>
          <th>Título</th>
          <th>Descrição</th>
          <th>Imagem da capa</th>
          <th>Nome do autor</th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>

      <tbody class="text-center">
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.description %></td>
              <td><%= link_to image_tag(book.cover_url, size: '150'), book.cover_url, target: 'blank' if book.cover_url %></td>
              <td><%= book.author_name %></td>
              <td><%= link_to '<i class="bi bi-info-circle"></i>'.html_safe, book %></td>
              <td><%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_book_path(book) %></td>
              <td><%= link_to '<i class="bi bi-trash"></i>'.html_safe, book, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="row">
      <strong>Nenhum livro cadastrado</strong>
    </div>
    <br />
  <% end %>
</div>
