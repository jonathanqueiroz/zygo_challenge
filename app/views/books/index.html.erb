<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div style="padding: 50px 0px;">
  <%= form_tag search_books_path, method: 'get' do %>
    <%= label_tag 'q', 'Buscar Livros:' %>
    <%= text_field_tag :q, params[:q], placeholder: 'Busque por título descrição ou autor', style: 'width: 300px' %>
    <%= submit_tag "Buscar" %>
  <% end %>
</div>

<% if @books.present? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Cover url</th>
        <th>Author name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= book.cover_url %></td>
          <td><%= book.author_name %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <strong>Nenhum livro cadastrado</strong>
  <br />
<% end %>
<br>

<%= link_to 'New Book', new_book_path %>
